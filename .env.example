# Commitment Intelligent Platform v0.3 - Environment Configuration

# =============================================================================
# BASIC APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-strong-one

# =============================================================================
# MICROSOFT GRAPH API CONFIGURATION (for Outlook Calendar Integration)
# =============================================================================
# Get these from Azure AD App Registration
MICROSOFT_CLIENT_ID=your_application_client_id
MICROSOFT_CLIENT_SECRET=your_application_client_secret
MICROSOFT_TENANT_ID=your_azure_tenant_id
MICROSOFT_REDIRECT_URI=http://localhost:5000/auth/callback

# =============================================================================
# EMAIL CONFIGURATION (SMTP Settings)
# =============================================================================
# Gmail Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com

# Outlook/Office 365 Configuration (Alternative)
# SMTP_SERVER=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@outlook.com
# SMTP_PASSWORD=your_password
# EMAIL_FROM=your_email@outlook.com

# Corporate SMTP Configuration (Alternative)
# SMTP_SERVER=your_corporate_smtp_server
# SMTP_PORT=587
# SMTP_USERNAME=your_corporate_email
# SMTP_PASSWORD=your_password
# EMAIL_FROM=your_corporate_email

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# File upload settings
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes
UPLOAD_FOLDER=uploads

# Session settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =============================================================================
# DEMO MODE (Optional)
# =============================================================================
# Set to true for demo/testing purposes
DEMO_MODE=false
DEMO_EMAIL_RECIPIENTS=demo-team@yourcompany.com

# =============================================================================
# PRODUCTION SETTINGS (Override for production deployment)
# =============================================================================
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# MICROSOFT_REDIRECT_URI=https://yourdomain.com/auth/callback

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in the project root
# 2. Replace all placeholder values with your actual credentials
# 3. For Microsoft Graph API:
#    - Register app in Azure AD
#    - Configure API permissions: Calendars.ReadWrite, User.Read, offline_access
#    - Generate client secret
# 4. For Email (Gmail):
#    - Enable 2-factor authentication
#    - Generate app-specific password
# 5. Never commit .env file to version control
# 6. Use strong, unique passwords and rotate regularly
